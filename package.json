{
  "name": "typescript-node-base",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Jake Klassen",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "shx rm -rf dist",
    "prebuild": "npm run clean",
    "build": "node --loader ts-node/esm src/build.ts",
    "watch": "tsc --watch",
    "start": "PORT=$(get-port) nodemon",

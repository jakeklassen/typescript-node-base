{
  "name": "typescript-node-base",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Jake Klassen",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "shx rm -rf dist",
    "prebuild": "yarn run clean",
    "build": "node --loader ts-node/esm src/build.ts",
    "postbuild": "replace-tsconfig-paths",
    "watch": "tsc --watch",
    "start": "PORT=$(get-port) nodemon",
    "pretest": "yarn run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prod": "node ./dist"
  },
  "dependencies": {
    "comment-json": "^4.1.0",
    "express": "^4.17.1",
    "pino-http": "^5.8.0",
    "pino-pretty": "^7.1.0",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "@types/pino-http": "^5.8.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "clipboardy": "^3.0.0",
    "esbuild": "^0.13.2",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "get-port": "^6.0.0",
    "get-port-cli": "^3.0.0",
    "jest": "^27.0.4",
    "nodemon": "^2.0.5",
    "prettier": "^2.0.5",
    "replace-tsconfig-paths": "^1.2.2",
    "shx": "^0.3.2",
    "tiny-glob": "^0.2.9",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.4.0"
  }
}

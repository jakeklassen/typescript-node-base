{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"rootDir": "./src"
	},
	"include": ["src"],
	"exclude": [
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.test.ts",
		"**/*.test.tsx",
		"eslint.config.ts",
		"vitest.config.ts"
	]
}
